<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_createUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Create new user"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_createUser"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Username"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edit_txt_username"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/txt_username"
        android:layout_toEndOf="@+id/txt_username"
        android:layout_toRightOf="@+id/txt_username" />

    <TextView
        android:id="@+id/txt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_txt_username"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edit_txt_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/txt_password"
        android:layout_toEndOf="@id/txt_password"
        android:layout_toRightOf="@id/txt_password" />

    <TextView
        android:id="@+id/txt_confirmPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_txt_password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Confirm pass"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edit_txt_confirmPass"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/txt_confirmPass"
        android:layout_toEndOf="@id/txt_confirmPass"
        android:layout_toRightOf="@id/txt_confirmPass" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_confirmPass"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txt_confirmPass"
        android:layout_marginBottom="44dp"
        android:text="CREATE"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_createUser"
        android:layout_alignRight="@+id/txt_createUser"
        android:layout_alignTop="@+id/btn_create"
        android:text="CANCEL"
        android:textSize="30sp" />

</RelativeLayout>
